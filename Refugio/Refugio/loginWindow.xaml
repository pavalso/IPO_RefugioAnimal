<Window x:Class="Refugio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Refugio"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label x:Name="usernameLbl" Content="Username:" HorizontalAlignment="Left" Margin="22,19,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="usernameTb" HorizontalAlignment="Left" Height="26" Margin="92,19,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="passwordLbl" Content="Password:" HorizontalAlignment="Left" Margin="22,56,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="passwordTb" HorizontalAlignment="Left" Height="26" Margin="92,56,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="loginBtn" Content="Login" HorizontalAlignment="Left" Margin="22,95,0,0" VerticalAlignment="Top" Width="75" Click="loginBtn_Click"/>

    </Grid>
</Window>
